<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">




    <bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"/>
    <bean class="real_spring.InjectRandomIntAnnotationBeanPostProcessor"/>
    <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/>

    <bean class="real_spring.InjectRandomNameAnnotationBeanPostProcessor"/>

    <bean class="real_spring.BeanDefinitionValidatorBeanFactoryPostProcessor"/>

    <context:property-placeholder location="quotes.properties"/>





    <bean id="integerFactory" class="real_spring.IntegerFactory"/>
    <bean class="java.lang.Integer" scope="prototype" factory-bean="integerFactory" factory-method="randomInt"/>



    <bean id="s" class="java.lang.String">
        <constructor-arg value="Trust me"/>
    </bean>


    <bean id="talkingRobot" class="real_spring.TalkingRobot">

       <!-- <property name="quoters">
            <list>
                <ref bean="shakespearQuoter"/>
                <ref bean="terminatorQuoter"/>
            </list>
        </property>-->
    </bean>

    <bean id="shakespearQuoter" class="real_spring.ShakespearQuoter">
        <property name="message" value="${shake}"/>

    </bean>


    <bean id="terminatorQuoter" class="real_spring.TerminatorQuoter" destroy-method="terminate" >
        <property name="messages">
            <list>
                <value>I'll be back</value>
                <ref bean="s"/>
                <value>Astalavista baby</value>
            </list>
        </property>
    </bean>
</beans>




